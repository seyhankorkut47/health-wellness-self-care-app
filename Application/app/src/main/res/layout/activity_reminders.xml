<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Your Reminders"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Exercise Reminder -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise Reminder:"/>

        <TimePicker
            android:id="@+id/timeExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginBottom="8dp"/>

        <Switch
            android:id="@+id/switchExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Exercise Reminder"
            android:layout_marginBottom="16dp"/>

        <!-- Water Reminder -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hydration Reminder:"/>

        <TimePicker
            android:id="@+id/timeWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginBottom="8dp"/>

        <Switch
            android:id="@+id/switchWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Water Reminder"
            android:layout_marginBottom="16dp"/>

        <!-- Sleep Reminder -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep Reminder:"/>

        <TimePicker
            android:id="@+id/timeSleep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginBottom="8dp"/>

        <Switch
            android:id="@+id/switchSleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Sleep Reminder"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSaveReminders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Reminders"/>
    </LinearLayout>
</ScrollView>
